<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Connection Pool size-->
        <property name="connection.pool_size">5</property>

        <!-- MYSQL Driver class name  -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>

        <!--Database Url-->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/assignmentdb</property>

        <!--Database username-->
        <property name="hibernate.connection.username">root</property>

        <!--Database password-->
        <property name="hibernate.connection.password">hello123</property>

        <!--Helps to convert ORM/HQL to corresponding SQL-->
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <!--Post conversion of SQL query, need to display the query in console-->
        <property name="show_sql">true</property>

       <property name="hbm2ddl.auto">create</property>

        <!-- Set current session context -->
        <property name="current_session_context_class">thread</property>
        <mapping resource="hibernate-mapping/employee.hbm.xml"/>
        <mapping resource="hibernate-mapping/skill.hbm.xml"/>

       </session-factory>
</hibernate-configuration>